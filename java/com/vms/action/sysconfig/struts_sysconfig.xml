<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">
<struts>
	<package name="sysconfig" namespace="/sys" extends="json-default">
		<action name="tosysmain" class="com.vms.action.sysconfig.SystemConfigAction">
			<result>/sysconfig/sysMain.jsp</result>
		</action>
		<action name="toEmployees" class="employeeMgmt" method="toEmployees">
			<result name="success">/sysconfig/employees.jsp
			</result>
		</action>
		<action name="getEmployees" class="employeeMgmt" method="getEmployees">
			<result type="json">
			<param name="root">table</param>
			</result>
		</action>
		<action name="toAddEmployee" class="employeeMgmt" method="toAddEmployee">
			<result name="success">/sysconfig/addEmployee.jsp</result>
		</action>
		
		<action name="toUpdateEmployee" class="employeeMgmt" method="toUpdateEmployee">
			<result name="success">/sysconfig/employee.jsp</result>
			
		</action>
		
		<action name="doUpdateEmployee" class="employeeMgmt" method="doUpdateEmployee">
			<result name="success">/sysconfig/employees.jsp</result>
			<result name="input">/sysconfig/employee.jsp</result>
		</action>
		
		<action name="doAddEmployee" class="employeeMgmt" method="doAddEmployee">
			<result name="success">/sysconfig/employees.jsp</result>
			<result name="input">/sysconfig/addEmployee.jsp</result>
		</action>
	</package>
</struts>