<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
	"-//Hibernate/Hibernate Mapping DTD//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping package="com.vms.db.bean">
	<class name="User" table="user">
		<meta attribute="sync-DAO">true</meta>
		<id name="id" type="integer" column="userID">
			<generator class="native" />
		</id>
		<property name="userName" column="userName" type="string"
			not-null="true" length="50" />
		<property name="userPass" column="userPass" type="string"
			not-null="true" length="128" />
		<property name="status" column="status" type="integer"
			not-null="true" length="10" />
		<many-to-one name="employee" column="employee" class="Employee"
			not-null="true" lazy="false">
		</many-to-one>
		<!--
		<set name="vedioscores" inverse="true" lazy="false">
			<key column="examiner" not-null="false" />
			<one-to-many class="Vedioscore" />
		</set>
		<set name="playorders" inverse="true" lazy="false">
			<key column="auditor" not-null="false"/>
			<one-to-many class="Playorder" />
		</set>
		<set name="playchangelogs" inverse="true" lazy="false">
			<key column="auditor" not-null="false"/>
			<one-to-many class="Playchangelog" />
		</set>
		<set name="vediotapes" inverse="true" lazy="false" >
			<key column="inputer" not-null="false"/>
			<one-to-many class="Vediotape" />
		</set>
		<set name="auditings" inverse="true" lazy="false">
			<key column="auditor" not-null="false"/>
			<one-to-many class="Auditing" />
		</set>
		-->
		<set name="Roles" table="user_role" cascade="all" lazy="false">
			<key column="userID" not-null="false"/>
			<many-to-many column="roleid" class="Role" />
		</set>
	</class>
</hibernate-mapping>